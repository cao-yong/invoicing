  <!-- 查询用户拥有的角色 -->
  <select id="selectUserRoleById" parameterType="java.lang.Integer" resultType="Role" >
  	SELECT DISTINCT
	  a.id,
	  a.name,
	  a.english_name englishName,
	  a.remark,
	  a.is_deleted isDeleted
	FROM role a
	  LEFT JOIN role_user ur
	    ON ur.role_id = a.id
	  LEFT JOIN user u
	    ON u.id = ur.user_id
	WHERE a.is_deleted = 'N' AND ur.is_deleted = 'N' AND u.is_deleted = 'N'
	    AND u.id = #{id}
	ORDER BY a.name
  </select>

  <!--根据用户名查询用户及所有角色-->
  <select id="queryUserAndRolesByUsername" parameterType="java.lang.String" resultMap="userMap">
    SELECT
    u.*,
    ru.role_id,
    r.name role_name
    FROM user u,
    role_user ru,
    role r
    WHERE ru.user_id = u.id
    AND r.id = ru.role_id
    AND u.is_enable = 1
    <if test="username != null and username != ''">
      AND u.username = #{username}
    </if>
  </select>
